<section>
  <h2> Create New Post! </h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-text">Content</label>
      <textarea name="post-text"></textarea>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
    <h2>Your Post</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
           {{> post-info post}}
           <article class="post">
             <div class = "post-title">
             <a href="/post/{{id}}"{{title}}</a>
             </div>
             <div>
               <strong>Post by {{user.username}} on {{format_date create_at}}</strong>
             </div>
             <div>
               {{post_text}}
             </div>
           </article>
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>